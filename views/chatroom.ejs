

<%- include('includes/headChatroom.ejs') %>


    <!-- Header Section -->
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h6 class="fs-3 text-muted mt-4">Welcome <%=username%> to your chatroom!</h6>
            <p class="text-danger"><%= msg %></p>

        </div>
    </div>

    <!-- Message Display Area -->
    <div class="row justify-content-center mt-3">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="chat-messages" id="chatMessages" style="height: 60vh; overflow-y: auto;">
                        <!-- Messages will be dynamically loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Message Input -->
    <div class="row justify-content-center mt-4 mb-4">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="message" class="form-label visually-hidden">Your Message</label>
                        <div class="input-group">
                            <input type="text" class="form-control bigger-input" id="message"
                                   placeholder="Type your message here..." required pattern=".*\S.*">
                            <button id="sendMessageBtn" class="btn btn-primary">
                                <i class="bi bi-send"></i> Send
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editMessageModal" tabindex="-1" aria-labelledby="editMessageModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editMessageForm">
                        <div class="mb-3">
                            <label for="editMessageInput" class="form-label">Edit Message</label>
                            <input type="text" class="form-control bigger-input" id="editMessageInput"
                                   placeholder="Enter your message" required pattern=".*\S.*">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="saveEditButton">Save</button>
                </div>
            </div>
        </div>
    </div>



</div>

<script type="module" src="/javascripts/chatroom.js"></script>

<%- include('includes/endChatroom.ejs') %>

